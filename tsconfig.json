{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "outDir": "build",
    "declaration": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "preserveConstEnums": true
  },
  "include": ["src/**/*", "./*.ts", "./*.js"],
  "exclude": ["./tests/**/*.spec.ts"]
}
