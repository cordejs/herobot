{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "esnext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "preserveConstEnums": true
  },
  "include": [
    "src/**/*",
    "./*.ts",
    "./*.js"
  ],
  "exclude": [
    "./tests/**/*.spec.ts"
  ],
}